<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="thisRetirar"
             x:Class="ExamenSegundaParcial6673.Views.Retirar6673">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="10" >

                <Label Text="Cantidad:" />
                <Entry Text="{Binding NuevaCantidad}" Keyboard="Numeric" />

                <Button Text="Retirar" BackgroundColor="#2196F3" TextColor="White" Command="{Binding cmdRetirarCuenta}" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>